@model GameStore.Web.Models.CommentViewModel

<div id="newComment">
	@using (Ajax.BeginForm("New", null, new AjaxOptions
	{
		HttpMethod = "POST",
		UpdateTargetId = "newComment",
		InsertionMode = InsertionMode.Replace,
		OnSuccess = "reloadPage"
	}, new { id = "CommentForm" }))
	{
		@Html.HiddenFor(m => m.GameKey)
		<div id="replyTo"></div>
		<b>@Html.LabelFor(m => m.Name)</b>
		<p>
			@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Name)
		</p>
		<b>@Html.LabelFor(m => m.Body)</b>
		<p>
			@Html.TextBoxFor(m => m.Body, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Body)
		</p>
		<p>
			<button id="button" type="submit" class="btn btn-default">Create</button>
		</p>
	}
</div>