@model GameStore.Web.Models.GameViewModel

@{
	ViewBag.Title = "Game";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Game</h1>
<b>@Html.LabelFor(m => m.Key)</b>
<p>@Html.DisplayFor(m => m.Key)</p>
<b>@Html.LabelFor(m => m.Name)</b>
<p>@Html.DisplayFor(m => m.Name)</p>
<b>@Html.LabelFor(m => m.Description)</b>
<p>@Html.DisplayFor(m => m.Description)</p>
<b>@Html.LabelFor(m => m.Price)</b>
<p>@Html.DisplayFor(m => m.Price)</p>
<b>@Html.LabelFor(m => m.UnitsInStock)</b>
<p>@Html.DisplayFor(m => m.UnitsInStock)</p>
<b>@Html.LabelFor(m => m.Discontinued)</b>
<p>@Html.DisplayFor(m => m.Discontinued)</p>

@if (Model.PlatformTypesInput.Count != 0)
{
	<b>@Html.LabelFor(m => m.PlatformTypesInput)</b>
	foreach (var platformType in Model.PlatformTypesInput)
	{
		<p>@platformType</p>
	}
}

<b>@Html.LabelFor(m => m.GenresInput)</b>

@if (Model.GenresInput.Count != 0)
{
	foreach (var name in Model.GenresInput)
	{
		<p>@Html.ActionLink(name, "Show", "Genres", new { key = name }, null)</p>
	}
}
else
{
	<p>Other</p>
}

<b>@Html.LabelFor(m => m.PublisherInput)</b>

@if (Model.PublisherInput != null)
{
	<p>@Html.ActionLink(Model.PublisherInput, "Show", "Publishers", new { key = Model.PublisherInput }, null)</p>
}
else
{
	<p>Unknown</p>
}

@Html.ActionLink("Download", "Download", "Games", null, new { target = "_blank", @class = "btn btn-primary" })
@Html.ActionLink("Comments", "NewComment", "Comments", new { key = Model.Key }, new { @class = "btn btn-default" })
@Html.ActionLink("Buy", "Buy", "Orders", new { key = Model.Key }, new { @class = "btn btn-default" })
@Html.ActionLink("Update", "Update", "Games", new { key = Model.Key }, new { @class = "btn btn-default" })
@Html.ActionLink("Delete", "Delete", "Games", new { key = Model.Key }, new { @class = "btn btn-danger" })