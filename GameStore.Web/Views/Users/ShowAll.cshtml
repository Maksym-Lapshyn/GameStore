@model List<GameStore.Web.Models.UserViewModel>

@{
	ViewBag.Title = "All Users";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>

<hr />
@foreach (var user in Model)
{
	<b>@Html.LabelFor(m => user.Login)</b>
	<p>@Html.ActionLink(user.Login, "Show", "Users", new { key = user.Login }, null)</p>
	<hr />
}

<p>
	@Html.ActionLink("Create new", "New", "Users", null, new {@class = "btn btn-default"})
</p>