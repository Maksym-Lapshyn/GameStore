@model List<GameStore.Web.Models.GenreViewModel>

@{
	ViewBag.Title = GlobalResource.Genres;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@GlobalResource.Genres</h1>
<hr />

@if (Model.Count != 0)
{
	foreach (var genre in Model)
	{
		<b>@Html.LabelFor(m => genre.Name)</b>
		<p>@Html.ActionLink(genre.Name, "Show", "Genres", new { key = genre.Name }, null)</p>
		<hr />
	}
}
else
{
	<p>@GlobalResource.ThereAreNoGenresInTheSystem</p>
}

<p>
	@Html.ActionLink(GlobalResource.ToCreate, "New", "Genres", null, new {@class = "btn btn-default"})
</p>