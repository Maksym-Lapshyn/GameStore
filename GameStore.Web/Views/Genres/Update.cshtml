@using GameStore.Web.Infrastructure.Helpers
@model GameStore.Web.Models.GenreViewModel

@{
	ViewBag.Title = "Update Genre";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Genre</h1>
@using (Html.BeginForm("Update", "Genres", FormMethod.Post))
{
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.NorthwindId)
	@Html.HiddenFor(m => m.IsDeleted)
	<b>@Html.LabelFor(m => m.Name)</b>
	<p>
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Name)
	</p>
	<b>@Html.LabelFor(m => m.ParentGenreInput)</b>
	<p>
		@foreach (var genre in Model.ParentGenreData)
		{
			@Html.CreateRadioButton("ParentGenreInput", genre.Name, Model.ParentGenreInput)
		}
	</p>
	<p><button type="submit" class="btn btn-default">Update</button></p>
}