@model GameStore.Web.Models.PublisherViewModel

@{
	ViewBag.Title = GlobalResource.UpdateOfPublisher;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@GlobalResource.UpdateOfPublisher</h1>
<hr/>

@using (Html.BeginForm("Update", "Publishers", FormMethod.Post))
{
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.NorthwindId)
	@Html.HiddenFor(m => m.IsDeleted)
	<b>@Html.LabelFor(m => m.CompanyName)</b>
	<p>
		@Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.CompanyName)
	</p>
	<b>@Html.LabelFor(m => m.Description)</b>
	<p>
		@Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Description)
	</p>
	<b>@Html.LabelFor(m => m.HomePage)</b>
	<p>
		@Html.TextBoxFor(m => m.HomePage, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.HomePage)
	</p>
	<p><button type="submit" class="btn btn-default">@GlobalResource.ToUpdate</button></p>
}