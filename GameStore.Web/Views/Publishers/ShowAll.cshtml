@model List<GameStore.Web.Models.PublisherViewModel>

@{
	ViewBag.Title = GlobalResource.Publishers;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@GlobalResource.Publishers</h1>
<hr />

@if (Model.Count != 0)
{
	foreach (var publisher in Model)
	{
		<b>@Html.LabelFor(m => publisher.CompanyName)</b>
		<p>@Html.ActionLink(publisher.CompanyName, "Show", "Publishers", new {key = publisher.CompanyName}, null)</p>
		<hr/>
	}
}
else
{
	<p>@GlobalResource.ThereAreNoPublishersInTheSystem</p>
}

<p>
	@Html.ActionLink(GlobalResource.ToCreate, "New", "Genres", null, new {@class = "btn btn-default"})
</p>