@model GameStore.Web.Models.PaymentViewModel

@{
	ViewBag.Title = GlobalResource.Checkout;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@GlobalResource.Checkout</h1>
<hr />

<p>@Html.ValidationMessageFor(m => m)</p>

@using (Html.BeginForm("Checkout", "Payments", FormMethod.Post))
{
	@Html.HiddenFor(m => m.PaymentAmount)
	<b>@Html.LabelFor(m => m.PaymentAmount)</b>
	<p>
		@Html.DisplayFor(m => m.PaymentAmount)
	</p>
	<b>@Html.LabelFor(m => m.BuyersFullName)</b>
	<p>
		@Html.TextBoxFor(m => m.BuyersFullName, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.BuyersFullName)
	</p>
	<b>@Html.LabelFor(m => m.BuyersCardNumber)</b>
	<p>
		@Html.TextBoxFor(m => m.BuyersCardNumber, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.BuyersCardNumber)
	</p>
	<b>@Html.LabelFor(m => m.ExpirationMonth)</b>
	<p>
		@Html.TextBoxFor(m => m.ExpirationMonth, new { @class = "form-control", type = "number", step = "1", min = "0", max = "12" } )
		@Html.ValidationMessageFor(m => m.ExpirationMonth)
	</p>
	<b>@Html.LabelFor(m => m.ExpirationYear)</b>
	<p>
		@Html.TextBoxFor(m => m.ExpirationYear, new { @class = "form-control", type = "number", step = "1", min = DateTime.UtcNow.Year.ToString() })
		@Html.ValidationMessageFor(m => m.ExpirationYear)
	</p>
	<b>@Html.LabelFor(m => m.CvvCode)</b>
	<p>
		@Html.TextBoxFor(m => m.CvvCode, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.CvvCode)
	</p>
	<b>@Html.LabelFor(m => m.Phone)</b>
	<p>
		@Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Phone)
	</p>
	<b>@Html.LabelFor(m => m.Email)</b>
	<p>
		@Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
		@Html.ValidationMessageFor(m => m.Email)
	</p>
	<p><button type="submit" class="btn btn-default">@GlobalResource.ToBuy</button></p>
}