@using GameStore.Web.Infrastructure.Helpers
@model GameStore.Web.Models.RoleViewModel

@{
    ViewBag.Title = "Update Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Role</h1>
@using (Html.BeginForm("Update", "Roles", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.NorthwindId)
    @Html.HiddenFor(m => m.IsDeleted)
    <b>@Html.LabelFor(m => m.Name)</b>
    <p>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </p>
    <b>@Html.LabelFor(m => m.AccessLevel)</b>
    <p>
        @Html.CreateRadioButtonGroup("AccessLevel", Model.AccessLevel)
        @Html.ValidationMessageFor(m => m.AccessLevel)
    </p>
    <p><button type="submit" class="btn btn-default">Update</button></p>
}