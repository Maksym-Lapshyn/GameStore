@model GameStore.Web.Models.LoginViewModel

@{
	ViewBag.Title = GlobalResource.Authentication;
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@GlobalResource.Authentication</h1>
<hr/>

@using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
{
	<b>@Html.LabelFor(m => m.Login)</b>
	<p>
		@Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Login)
	</p>
	<b>@Html.LabelFor(m => m.Password)</b>
	<p>
		@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
		@Html.ValidationMessageFor(m => m.Password)
	</p>
	<p>
		<b>
			@Html.EditorFor(m => m.IsPersistent)
			@Html.LabelFor(m => m.IsPersistent)
		</b>
	</p>
	<button type="submit" class="btn btn-default">@GlobalResource.ToLogIn</button>
}